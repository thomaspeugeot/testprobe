{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "01 - gongc a",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"command": "gongc",
			"group": "build",
			"args": [
				"-skipGoModCommands",
				"-level1",
				"-skipStager=false",
				"a/go/models"
			]
		},
		{
			"label": "01 - go run a",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/a/go/cmd/a"
			},
			"command": "go",
			"args": [
				"run",
				"main.go",
				"--",
				"-unmarshallFromCode=data/stage.go",
				"-marshallOnCommit=data/stage.go"
			],
			"group": "build"
		},
		{
